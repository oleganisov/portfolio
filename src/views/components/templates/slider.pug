script(type="text/x-template")#slider-root
  .slider
    info(:work="currentWork")
    display(:work="currentWork")
    btns(
      :works="works"
      :index="currentIndex"
      @slide="handleSlide"
    )

script(type="text/x-template")#slider-info
  .slider__info-container
    .slider__info
      .slider__info-title
        .title-h2 {{work.title}}
        .slider__info-skills {{work.skills}}
      .slider__info-button
        a(:href="work.link" target="_blank").btn-slider Посмотреть сайт

script(type="text/x-template")#slider-display
  .slider__display
    img(:src="work.photo", alt="").slider__big-pic

script(type="text/x-template")#slider-btns
  .slider__buttons
    .slider__button.slider__button--prev(@click="slide('prev')")
      .slider__button-img-container
        .slider__button-img-wrap
          img(:src="prevButtonsWorks[index].photo", alt="").slider__button-pic
    .slider__button.slider__button--next(@click="slide('next')")
      .slider__button-img-container
        .slider__button-img-wrap
          img(:src="nextButtonsWorks[index].photo", alt="").slider__button-pic