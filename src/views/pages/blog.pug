extends ../main.layout.pug

block variables
  - var title = 'Блог'
  - var pageClass = 'page-blog'

block headerAvatar
  .header__avatar  
    +avatar('', 'Блог', 'Статьи которые я написал',true)

block headerBottom

block trianglesBottom

block scripts
  script(src='./blog.bundle.js')

block content
  section.blog#blog
    nav.blog__nav.blog-nav#blog-nav
      ul.blog-nav__list
          li(v-for="post in posts").blog-nav__item
            a(:href="'#post-'+post.id").blog-nav__link {{ post.title }}
    main.blog__content
      ul.blog__list
        li(:id="'post-' + post.id" v-for="post in posts").blog__item
          h2.blog__title {{ post.title }}
          time.blog__date {{ post.created_at | correctDate}}
          .blog__text.text-content(v-html="post.content")
    nav.blog-menu#blog_menu
      ul.blog-menu__list
        li(v-for="post in posts").blog-menu__item
          a(:href="'#post-'+post.id").blog-menu__link {{ post.title }}
      .blog-btn#blog_btn
        .swipe-btn
