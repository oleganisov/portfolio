extends ../auth.layout.pug

block content
  .wrapper.wrapper-intro
    .intro
      .intro__avatar.avatar
        .avatar__pic
          img.avatar__img(src='./assets/images/photo.png')
        .avatar__name='Олег Анисов'
        .avatar__info.intro__info='Личный сайт веб разработчика'
        .intro__social
          +social(['vk','github','in'],'icon-blue')
      .intro__menu
        +menu([{name:'Мои работы',href:'works.html'},{name:'Обо мне',href:'about.html'},{name:'Блог',href:'blog.html'}],'intro-nav')
  .auth-btn
    a.btn='Авторизоваться'
  .copyright-block
    p="© Олег Анисов | Создано с любовью в LoftSchool | 2019"